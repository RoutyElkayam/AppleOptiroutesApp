<?xml version='0.0.11' encoding='utf-8'?>
<widget id="OptWays.sayyes" version="0.0.11" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Optways</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <preference name="AndroidWindowSplashScreenBackground" value="#FFFFFF" /> <!-- Set your background color here -->
        <preference name="AndroidWindowSplashScreenDuration" value="6000" /> <!-- Duration in milliseconds -->
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" /> <!-- Hide the spinner if not needed -->
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="platforms\android\app\src\main\res\drawable\icon.xml" />
        
