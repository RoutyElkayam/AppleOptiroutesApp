        <icon density="ldpi" src="res/screen/android/drawable-ldpi/icon.png" />
        <icon density="mdpi" src="res/screen/android/drawable-mdpi/icon.png" />
        <icon density="hdpi" src="res/screen/android/drawable-hdpi/icon.png" />
        <icon density="xhdpi" src="res/screen/android/drawable-xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/screen/android/drawable-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/screen/android/drawable-xxxhdpi/icon.png" />
    </platform>
    
    <platform name="ios">
        
        <config-file platform="ios" target="*-Info.plist" parent="LSApplicationQueriesSchemes">
            <array>
                <string>waze</string>
            </array>
        </config-file>
        <preference name="DisallowOverscroll" value="true" />
        <preference name="ScrollEnabled" value="true" />
        <preference name="WKSuspendInBackground" value="false" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="waze://*" />
        <allow-navigation href="*" />
        <access origin="*" />
        <allow-intent href="*" />
        <preference name="scheme" value="https" />
        <preference name="hostname" value="localhost" />
        <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
            <string>we use your location to navigate you the best and Optimized route!</string>
        </edit-config>
        
        <preference name="WKWebViewOnly" value="true" />
        <preference name="MediaTypesRequiringUserActionForPlayback" value="video" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <preference name="AllowNewWindows" value="true" />
        <preference name="LimitNavigationsToAppBoundDomains" value="false" />

        <!-- feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature-->
        
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        
